{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main %}
    <main id="mainLogin">

            <h1>Connectez vous</h1>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous etes déjà connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <label for="username">Votre nom : </label>
                <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" placeholder="Votre nom ici..." autocomplete="username" required autofocus>
                <label for="password">Votre mot de passe : </label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" placeholder="Votre mot de passe ici..." required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

            
                {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html #}

                {# <div class="checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Remember me</label>
                </div> #}
        

            <button type="submit">Se connecter</button>
        </form>
        
        <p>Vous n'avez pas un compte ? Créez en un !</p>
        <a href="{{ path("app_register") }}">Créer un compte</a>
    </main>
{% endblock %}
